    <!-- Define app icon for each platform. -->
    <icon src="icon.png" />
    <icon gap:density="ldpi" gap:platform="android" src="icon.png" />
    <icon gap:density="mdpi" gap:platform="android" src="icon.png" />
    <icon gap:density="hdpi" gap:platform="android" src="icon.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="icon.png" />
    <icon gap:platform="blackberry" src="icon.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="icon.png" />
    <icon gap:platform="ios" height="57" src="icon.png" />
    <icon gap:platform="ios" height="72" src="icon.png" />
    <icon gap:platform="ios" height="114" src="icon.png" />
    <icon gap:platform="ios" height="144" src="icon.png" />
    <icon gap:platform="webos" src="icon.png" />
    <icon gap:platform="winphone" src="icon.png" />
    <icon gap:platform="winphone" gap:role="background" src="icon.png" />
    
    <gap:splash gap:density="ldpi" gap:platform="android" src="splash.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="splash.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="splash.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="splash.png" />
    <gap:splash gap:platform="blackberry" src="splash.png" />
    <gap:splash gap:platform="ios" height="480" src="splash.png" />
    <gap:splash gap:platform="ios" height="960" src="splash.png" />
    <gap:splash gap:platform="ios" height="1024" src="splash.png" />
    <gap:splash gap:platform="ios" height="768" src="splash.png" />
    <gap:splash gap:platform="winphone" src="splash.png" />
    

    <content src="index.html" />
    <access origin="*" />
    
